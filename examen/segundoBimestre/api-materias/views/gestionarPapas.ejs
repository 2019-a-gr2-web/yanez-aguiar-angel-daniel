<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Examen</title>
    <style>
        .col-sm-12{
            text-align: center;
        }
        #salir{
            text-align: right;
        }
        .col-sm-8{
            text-align: right;
        }
        table, tr, td, th{
            border: solid black 1px;
        }
        .separador{
            margin-top: 50px;
            margin-bottom: 50px;
        }
        .col-sm-3{
            padding-top: 25px;
        }
        #tabla{
            text-align: -webkit-center;
        }

    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-12" id="salir">
            <a href="/examen/logout"><button class="btn btn-warning">Salir</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
        </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-9"></div>
                        <div class="col-sm-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="separador"></div>
    <div class="row">
        <div class="col-sm-12" id="tabla">
            <table>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Fecha de nacimiento</th>
                    <th>semestre actual</th>
                    <th>graduado</th>
                    <th>acciones</th>
                </tr>
                <%arregloEstudiantes.forEach((estudiante)=>{%>
                <tr>
                    <td><%=estudiante.nombres%></td>
                    <td><%=estudiante.apellidos%></td>
                    <td><%=estudiante.fechaNacimiento%></td>
                    <td><%=estudiante.semestreActual%></td>
                    <td><%=estudiante.graduado%></td>
                    <td>
                        <%if(idRol==1){%>
                        <form action="/examen/materias/<%=estudiante.id%>">
                            <button class="btn btn-primary btn-block">gestionar materias</button>
                        </form>
                        <%}else if(idRol==2){%>
                        <form action="/examen/materias/<%=estudiante.id%>">
                            <button class="btn btn-primary btn-block">ver materias</button>
                        </form>
                        <%}%>
                    </td>
                </tr>
                <%})%>
            </table>
        </div>
    </div>
</div>
</body>
</html>