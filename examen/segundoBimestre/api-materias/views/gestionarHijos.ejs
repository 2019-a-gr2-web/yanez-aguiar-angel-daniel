<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Examen</title>
    <style>
        .col-sm-12{
            text-align: center;
        }
        #salir{
            text-align: right;
        }
        .col-sm-8{
            text-align: right;
        }
        table, tr, td, th{
            border: solid black 1px;
        }
        .separador{
            margin-top: 50px;
            margin-bottom: 50px;
        }
        .col-sm-3{
            padding-top: 25px;
        }
        #tabla{
            text-align: -webkit-center;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-12" id="salir">
            <a href="/examen/logout"><button class="btn btn-warning">Salir</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                <form action="/examen/materiasBusqueda" method="post">
                    <div class="row">
                <div class="col-sm-9">
                    <label for="buscar"></label>
                    <input class="form-control" type="text" id="buscar" name="buscar" placeholder="Busqueda">
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-primary btn-block">Buscar</button>
                </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-9"></div>
                            <div class="col-sm-3">
                                <%if(idRol==1){%>
                                <a href="/examen/crearMateria">
                                    <button class="btn btn-success btn-block">Crear</button>
                                </a>
                                <%}%>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="separador"></div>
    <div class="row">
        <div class="col-sm-12" id="tabla">
            <table>
                <tr>
                    <th>nombre</th>
                    <th>codigo</th>
                    <th>descripcion</th>
                    <th>activo</th>
                    <th>fecha creacion</th>
                    <th>numero horas por semana</th>
                    <th>precio</th>
                    <th>acciones</th>
                </tr>
                <%arregloMaterias.forEach((materia)=>{%>
                <tr>
                    <td><%=materia.nombre%></td>
                    <td><%=materia.codigo%></td>
                    <td><%=materia.descripcion%></td>
                    <td><%=materia.activo%></td>
                    <td><%=materia.fechaCreacion%></td>
                    <td><%=materia.numeroHorasPorSemana%></td>
                    <td><%=materia.precio%></td>
                    <td>
                        <%if(idRol==1){%>
                        <form action="/examen/eliminarM" method="post">
                            <input type="hidden" name="id" value="<%=materia.id%>"/>
                            <button class="btn btn-danger btn-block">Eliminar</button>
                        </form>
                        <%}else if(idRol==2){%>
                        <form action="/examen/irAlCarrito" method="post">
                            <input type="hidden" name="id" value="<%=materia.id%>"/>
                            <button class="btn btn-danger btn-block">agregar al carrito</button>
                        </form>
                        <%}%>
                    </td>
                </tr>
                <%})%>
            </table>
        </div>
    </div>
</div>
</body>
</html>